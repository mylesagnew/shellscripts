# Environment variables for backup script

# Encryption flag
ENCRYPTFLG=true
BACKUPPASS=change_me

# Backup directories
LOCALDIR=change_me
TEMPDIR=/backup/temp/

# Logging
LOGFILE=/opt/backups/backup.log

# MySQL backup settings
MYSQL_BACKUP_FLG=true
MYSQL_ROOT_PASSWORD=change_me
MYSQL_BACKUP_ALL=true
MYSQL_DATABASE_NAME=database1,database2

# Backup items
BACKUP_ITEMS=/home

# Retention policy
LOCALAGEDAILIES=7

# Google Drive upload via rclone
RCLONE_FLG=false
RCLONE_NAME=your_rclone_name
RCLONE_FOLDER=your_rclone_folder

# FTP upload
FTP_FLG=false
FTP_HOST=your_ftp_host
FTP_USER=your_ftp_user
FTP_PASS=your_ftp_pass
FTP_DIR=your_ftp_directory
