# Encryption settings
ENCRYPTFLG=true
BACKUPPASS="your_backup_password"

# Backup directories
LOCALDIR="/opt/backups/"
TEMPDIR="/opt/backups/temp/"
LOGFILE="/opt/backups/backup.log"

# MySQL settings
MYSQL_BACKUP_FLG=true
MYSQL_ROOT_PASSWORD="your_mysql_password"
MYSQL_DATABASE_NAME="db1 db2 db3"

# Files to backup
BACKUP="/path/to/important_file /path/to/important_directory"

# Retention settings
LOCALAGEDAILIES=7

# Rclone (Google Drive) settings
RCLONE_FLG=true
RCLONE_NAME="your_rclone_name"
RCLONE_FOLDER="your_rclone_folder"

# FTP settings
FTP_FLG=true
FTP_HOST="ftp.example.com"
FTP_USER="your_ftp_username"
FTP_PASS="your_ftp_password"
FTP_DIR="remote_backup_directory"
